maxTime(20).
cycleInterval(150).

fluents([
  money(V),
  cartQuantity(I, Q),
  shopQuantity(I, Q)
]).
actions([
  addToCart/1,
  checkout
]).

initially([
  shopQuantity(trekkingPants, 2),
  shopQuantity(boots, 2),
  shopQuantity(hat, 2),
  shopQuantity(shirt, 2)
]).

initially(money(50)).

item(trekkingPants, 15).
item(boots, 20).
item(hat, 3).
item(shirt, 8).

true -> shop(T1, T2).

shop(T1, T3) <-
  money(M, T1),
  item(I, P),
  M >= P,
  addToCart(I, T1, T2),
  shop(T2, T3).

% till you drop!
shop(T1, T2) <- checkout(T1, T2), money(A, T1), lpsHalt from T2.

% checkout(T1, T2) -> lpsHalt.

updates(addToCart(I), money(V), money(V - A), [item(I, A)]).
initiates(addToCart(I), cartQuantity(I, 1), [not cartQuantity(I, _)]).
updates(addToCart(I), cartQuantity(I, O), cartQuantity(I, O + 1)).
updates(addToCart(I), shopQuantity(I, O), shopQuantity(I, O - 1)).

<- shopQuantity(_, Q), Q < 0.
<- money(V), V < 0.
